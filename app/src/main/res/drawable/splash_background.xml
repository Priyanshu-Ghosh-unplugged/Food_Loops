<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item android:drawable="@color/foodloops_green" />

    <!-- Logo centered in the middle -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size
                android:width="200dp"
                android:height="200dp" />
            <padding
                android:bottom="40dp"
                android:left="40dp"
                android:right="40dp"
                android:top="40dp" />
        </shape>
    </item>

    <!-- App name text will be displayed via the layout -->
</layer-list>